priority 100

snippet fig "Add a new figure"
#figure(
	image("${1:path}", ${2:width: ${3:80%}}),
	caption: [${4:caption}],
) <${5:label}>
endsnippet

snippet notepdfpc "Add note for pdfpc presentation" b
#pdfpc.speaker-note(
	\`\`\`md
	$1

	\`\`\`
)$0
endsnippet

snippet cetz "add cetz canvas"
#cetz.canvas({
	import cetz.draw: *
	$0
})
endsnippet

snippet cetzplots "add cetz plot axis" b
#cetz.canvas({
	import cetz.draw: *

	set-style(
		plot: (style: (stroke: 3pt)),
		axes: (
			y: (label: (angle: 90deg, offset: 2)),
			x: (label: (offset: 1, anchor: "north-east")),
		),
	)

	plot.plot(
		size: (${1:x, y}),
		axis-style: "left",
		x-equal: "y",
		x-min: 0,
		y-min: 0,
		x-max: 10,
		y-max: 10,
		y-tick-step: 2,
		x-tick-step: 2,
		x-label: [${2:x-label}],
		y-label: [${3:y-label}],
		{
			plot.add(domain: (0, 10), x => x^2)
			$0
		},
	)
})
endsnippet

snippet mplcolors "Define matplotlib's default color palette" b
